{
    "name": "FTP Sync Example",
    "host": "your-server.com",
    "username": "your-username@domain.com",
    "password": "your-password",
    "protocol": "ftp",
    "port": 21,
    "remotePath": "/public_html/your-folder",
    "localPath": "C:/path/to/your/project",
    "uploadOnSave": true,
    "context": ".",
    "watcher": {
      "files": "**/*",
      "autoUpload": true,
      "autoDelete": true
    }
} 